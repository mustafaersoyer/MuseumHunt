<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.example.museumhunt.UI.home.HomeFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_home" >

    </fragment>

    <fragment
        android:id="@+id/navigation_dashboard"
        android:name="com.example.museumhunt.UI.artifacts.ArtifactsFragment"
        android:label="@string/title_artifacts"
        tools:layout="@layout/fragment_artifacts" />

    <fragment
        android:id="@+id/navigation_notifications"
        android:name="com.example.museumhunt.UI.tour.TourFragment"
        android:label="@string/title_tour"
        tools:layout="@layout/fragment_tour" />
    <fragment
        android:id="@+id/navigation_settings"
        android:name="com.example.museumhunt.UI.settings.SettingsFragment"
        android:label="@string/title_settings"
        tools:layout="@layout/fragment_settings" />
</navigation>